<% layout('layouts/boilerplate') %>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h1 class="text-center mb-4">Add New Listing</h1>

                <form action="/listings" method="POST">
                    <!-- Title -->
                    <div class="mb-3">
                        <label for="listing[title]" class="form-label" required>Title</label>
                        <input name="listing[title]" class="form-control is-valid" type="text" required class="form-control">
                        <div class="valid-feedback">
                            yeh boi!
                        </div>
                    </div>

                    <!-- Description -->
                    <div class="mb-3">
                        <label for="listing[description]" class="form-label">Description</label>
                        <textarea name="listing[description]"  required class="form-control"></textarea>
                        <!-- class="form-control is-invalid" -->
                        <!-- /<div id="validationServerUsernameFeedback" class="invalid-feedback">
                            Please choose a username.
                        </div> -->
                    
                    </div>



                    <!-- Image URL -->
                    <div class="mb-3">
                        <label class="form-label">Image URL</label>
                        <input name="listing[image]" type="text" class="form-control">
                    </div>

                    <!-- Price and Country in one row -->
                    <div class="row">
                        <div class="mb-3 col-md-6">
                            <label class="form-label">Price</label>
                            <input name="listing[price]" type="number" required class="form-control">
                        </div>

                        <div class="mb-3 col-md-6">
                            <label class="form-label">Country</label>
                            <input name="listing[country]" type="text" class="form-control">
                        </div>
                    </div>

                    <!-- Location -->
                    <div class="mb-3">
                        <label class="form-label">Location</label>
                        <input name="listing[location]" type="text" class="form-control">
                    </div>

                    <!-- Buttons -->
                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-primary btn-success">Add</button>
                        <a href="/listings" class="btn btn-secondary btn-danger">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>